# Security: Wait 7 days before installing newly published packages
minimum-release-age=7

# Security: Verify package integrity using checksums
enable-strict-ssl=true

# Security: Prevent auto-install of peers to avoid supply chain attacks
auto-install-peers=false

# Security: Use exact versions in lockfile
save-exact=false

# Performance: Use hard links instead of copying
package-import-method=hardlink

# Lockfile: Ensure reproducible builds
lockfile=true
